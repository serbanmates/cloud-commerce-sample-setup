$productCatalog = b2btelcospaProductCatalog

UPDATE CatalogVersionSyncJob; code[unique = true]                 ; roottypes(code)[mode = append]    ;
                            ; sync $productCatalog:Staged->Online ; TmaProductSpecification           ;
